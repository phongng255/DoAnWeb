@model IEnumerable<DAW.Models.ShoeEntities.Shoe>

@{
    ViewBag.Title = "Loai";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>

</head>
<body>
    <div class="collection_text">Loại Giầy</div>
    <div class="layout_padding gallery_section">
        <div class="container">
            <div class="row">
                @foreach (var item in Model)
                {
                    <div class="col-sm-4">
                    <div class="best_shoes">
                        <p class="best_text">@Html.DisplayFor(modelItem => item.Name) </p>
                        <div class="shoes_icon"><img src="@Html.DisplayFor(modelItem => item.image)"></div>
                        <div class="star_text">
                            <div class="left_part">
                                <ul>
                                    <li><a href="#"><img src="~/Content/images/star-icon.png"></a></li>
                                    <li><a href="#"><img src="~/Content/images/star-icon.png"></a></li>
                                    <li><a href="#"><img src="~/Content/images/star-icon.png"></a></li>
                                    <li><a href="#"><img src="~/Content/images/star-icon.png"></a></li>
                                    <li><a href="#"><img src="~/Content/images/star-icon.png"></a></li>
                                    <li>@Html.ActionLink("Xem Chi Tiết", "Detail", new { id = item.Id })</li>
                                </ul>
                            </div>
                        </div>
                    </div>
                    <div class="buy_now_bt">
                        <button class="buy_text">Buy</button>
                    </div>
                     </div>
                }
            </div>
        </div>
    </div>
</body>
</html>